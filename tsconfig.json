{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@redux/hooks": ["src/redux/hooks"],
      "@redux/store": ["src/redux/store"],

      "@redux/common/types": ["src/redux/common/common.types"],
      "@redux/common/mappers": ["src/redux/common/common.mappers"],

      "@redux/user/slice": ["src/redux/user/userSlice"],
      "@redux/user/types": ["src/redux/user/user.types"],
      "@redux/user/mappers": ["src/redux/user/user.mappers"],
      "@redux/user/services": ["src/redux/user/user.services"],

      "@redux/categories/slice": ["src/redux/categories/categoriesSlice"],
      "@redux/categories/types": ["src/redux/categories/categories.types"],
      "@redux/categories/mappers": ["src/redux/categories/categories.mappers"],
      "@redux/categories/thunks": ["src/redux/categories/categoriesThunks"],

      "@redux/tags/slice": ["src/redux/tags/tagsSlice"],
      "@redux/tags/types": ["src/redux/tags/tags.types"],
      "@redux/tags/mappers": ["src/redux/tags/tags.mappers"],
      "@redux/tags/thunks": ["src/redux/tags/tagsThunks"],

      "@redux/projects/slice": ["src/redux/projects/projectsSlice"],
      "@redux/projects/types": ["src/redux/projects/projects.types"],
      "@redux/projects/mappers": ["src/redux/projects/projects.mappers"],
      "@redux/projects/thunks": ["src/redux/projects/projectsThunks"],

      "@screens": ["src/screens/index"],
      "@footers": ["src/components/elements/footers/index"],
      "@icons": ["src/components/elements/icons/index"],
      "@inputs": ["src/components/elements/inputs/index"],
      "@i18n": ["src/i18n/index"],
      "@navbars": ["src/components/elements/navbars/index"],
      "@texts": ["src/components/elements/texts/index"],
      "@language": ["src/components/elements/language/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next.config.js"],
  "exclude": ["node_modules"]
}
